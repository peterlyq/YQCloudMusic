/* pages/index/index.wxss */
/* 轮播图 */
.swiper{
  width:100% ;
  height: 400rpx;
}
.swiper image{
  width: 100%;
  height: 100%;
}

/* 导航栏 */
.navContainer{
  display: flex;
  justify-content: space-around;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navItem text{
  font-size: 26rpx;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
  background-color: rgb(240, 19, 19);
  color: white;
  margin: 20rpx 0;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 20rpx;
}
.recommendContainer .header .title{
  font-size: 32rpx;
  line-height: 38rpx;
  color: #666;
  margin: 20rpx;
}
.recommendContainer .header .more{
  float:right;
  border: 2rpx solid grey;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
}


/* 推荐内容区域 */
.scrollContainer{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  height: 100%;
  margin-left: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
}
.scrollItem text{
  display: block;
  font-size: 26rpx;
  /* 单行文本溢出三件套 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出三件套 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /*行数*/
}

/* 推荐歌曲 */
.rankTop{
  height: 200rpx;
}

/* 热歌榜 */
.topListSwiper{
  padding: 20rpx;
  height: 400rpx;
}
.swiperItem{
  background-color: #fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem{
  display: flex;

}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count{
  width: 100rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 100rpx;
}
.musicItem .name{
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}