/* pages/video/video.wxss */
.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header{
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
}
.videoContainer .header .search{
  border: 1rpx solid #eee;
  border-radius: 5rpx;
  flex: 1;
  text-align: center;
  line-height:60rpx;
  color: #d43c33;
}


/* 导航区域 */
.navScroll{
  display: flex;
  height: 70rpx;
  white-space: nowrap;
}
.navScroll .navBar{
  padding: 0 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}
.navBar .active{
  border-bottom: 1rpx solid #d43c33;
}
/* 视频区域 */
.videoScroll{
  height: calc(100vh - 152rpx);
}

.videoItem{
  padding: 0 3%;
  
}
.videoItem .common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
